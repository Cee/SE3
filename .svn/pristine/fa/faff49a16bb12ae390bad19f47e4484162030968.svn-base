package excalibur.game.logic.gamelogic;

import java.awt.Point;

/**
 * A simplified class of ChessPoint to use in ScoreCounter.
 * Created on 6/11/2014.
 * @author 喵叔
 * 
 */
public class TriggerlessChessPoint
{
	public Point point;
	public int color=0;
	
	public TriggerlessChessPoint(int color,Point point)
	{
		this.color=color;
		this.point=point;
	}
	
	public double getX()
	{
		return point.getX();
	}
	
	public double getY()
	{
		return point.getY();
	}
}
